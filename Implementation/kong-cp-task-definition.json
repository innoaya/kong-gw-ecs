{
    "family": "kong-control-plane",
    "containerDefinitions": [
        {
            "command": [
                "sh",
                "-c",
                "mkdir -p /etc/kong/certs && echo \"$CLUSTER_CERT_CONTENT\" > /etc/kong/certs/cluster.crt && echo \"$CLUSTER_KEY_CONTENT\" > /etc/kong/certs/cluster.key && exec kong start"
            ],
            "cpu": 0,
            "environment": [
                {
                    "name": "KONG_ROLE",
                    "value": "control_plane"
                },
                {
                    "name": "KONG_CLUSTER_CERT_KEY",
                    "value": "/etc/kong/certs/cluster.key"
                },
                {
                    "name": "KONG_ADMIN_ACCESS_LOG",
                    "value": "/dev/stdout"
                },
                {
                    "name": "KONG_PG_PORT",
                    "value": "5432"
                },
                {
                    "name": "KONG_ADMIN_ERROR_LOG",
                    "value": "/dev/stderr"
                },
                {
                    "name": "KONG_PROXY_ERROR_LOG",
                    "value": "/dev/stderr"
                },
                {
                    "name": "KONG_DATABASE",
                    "value": "postgres"
                },
                {
                    "name": "KONG_PG_HOST",
                    "value": "<YOUR_AURORA_ENDPOINT>"
                },
                {
                    "name": "KONG_CLUSTER_LISTEN",
                    "value": "0.0.0.0:8005"
                },
                {
                    "name": "KONG_PROXY_ACCESS_LOG",
                    "value": "/dev/stdout"
                },
                {
                    "name": "KONG_PG_USER",
                    "value": "<YOUR_DB_USERNAME>"
                },
                {
                    "name": "KONG_PG_PASSWORD",
                    "value": "<YOUR_DB_PASSWORD>"
                },
                {
                    "name": "KONG_PG_DATABASE",
                    "value": "kong"
                },
                {
                    "name": "KONG_ADMIN_LISTEN",
                    "value": "0.0.0.0:8001"
                },
                {
                    "name": "KONG_CLUSTER_CERT",
                    "value": "/etc/kong/certs/cluster.crt"
                },
                {
                    "name": "CLUSTER_CERT_CONTENT",
                    "value": "<PASTE_CONTENT_FROM_CLUSTER_CERT_CONTENT.txt>"
                },
                {
                    "name": "CLUSTER_KEY_CONTENT",
                    "value": "<PASTE_CONTENT_FROM_CLUSTER_KEY_CONTENT.txt>"
                }
            ],
            "essential": true,
            "image": "kong:latest",
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "fargate/kong-controlplane-logs",
                    "awslogs-region": "ap-southeast-1",
                    "awslogs-stream-prefix": "fargate"
                },
                "secretOptions": []
            },
            "mountPoints": [],
            "name": "kong-control",
            "portMappings": [
                {
                    "appProtocol": "http",
                    "containerPort": 8001,
                    "hostPort": 8001,
                    "name": "kong-control-8001-tcp",
                    "protocol": "tcp"
                },
                {
                    "appProtocol": "http",
                    "containerPort": 8005,
                    "hostPort": 8005,
                    "name": "kong-control-8005-tcp",
                    "protocol": "tcp"
                }
            ],
            "systemControls": [],
            "volumesFrom": []
        }
    ],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::<YOUR_AWS_ACCOUNT_ID>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<YOUR_AWS_ACCOUNT_ID>:role/kong-gw-TaskRole",
    "networkMode": "awsvpc",
    "placementConstraints": [],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "volumes": []
}